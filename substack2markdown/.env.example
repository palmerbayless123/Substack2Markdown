# Substack2Markdown Configuration
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED SETTINGS
# ===========================================

# The Substack publication URL (without trailing slash)
SUBSTACK_URL=https://example.substack.com

# ===========================================
# AUTHENTICATION (choose one method)
# ===========================================

# Method 1: Email/Password login
# SUBSTACK_EMAIL=your-email@example.com
# SUBSTACK_PASSWORD=your-password

# Method 2: Use existing browser session (default)
# Set to 'true' to use Chrome's logged-in session
USE_BROWSER_SESSION=true

# ===========================================
# OUTPUT SETTINGS
# ===========================================

# Directory to save downloaded content
OUTPUT_DIR=./output

# Download images along with posts
DOWNLOAD_IMAGES=true

# Image format to save (original, jpg, png, webp)
IMAGE_FORMAT=original

# ===========================================
# RATE LIMITING
# ===========================================

# Delay between requests in seconds (increase if getting rate limited)
REQUEST_DELAY=5

# Maximum retries for failed requests
MAX_RETRIES=3

# Timeout for page loads in seconds
PAGE_TIMEOUT=30

# ===========================================
# CONTENT FILTERS
# ===========================================

# Only download posts after this date (YYYY-MM-DD format)
# START_DATE=2024-01-01

# Only download posts before this date (YYYY-MM-DD format)
# END_DATE=2024-12-31

# Skip free posts (only download paid content)
# PAID_ONLY=false

# ===========================================
# ADVANCED SETTINGS
# ===========================================

# Run browser in headless mode (no visible window)
HEADLESS=false

# Chrome user data directory (for using existing profile)
# CHROME_USER_DATA_DIR=/path/to/chrome/profile

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Save raw HTML along with Markdown
SAVE_HTML=false
